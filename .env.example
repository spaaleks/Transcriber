# app settings
APP_DATA_DIR=./data
APP_HOST=127.0.0.1
PORT=15551

APP_AUTH_USER=admin
APP_AUTH_PASS=change_me

# whisper
WHISPER_MODEL=small
WHISPER_DEVICE=cpu
WHISPER_COMPUTE=int8
WHISPER_THREADS=8
# how many concurrent jobs can be run
WORKER_CONCURRENCY=1

# smtp
AUTO_SEND_EMAIL=1
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=myuser
SMTP_PASS=mys3cret
SMTP_SENDER=me@example.com
SMTP_SENDER_NAME=Me
SMTP_USE_TLS=1
SMTP_USE_SSL=0
# mail queue overrides
# MAIL_RATE_PER_MIN=30
# MAIL_BURST=15
# MAIL_RETRY_BASE_SEC=30
# MAIL_RETRY_MAX_SEC=1800
# MAIL_SMTP_CONCURRENCY=1

# SMTP_CA_FILE=/path/to/your-ca.pem
SMTP_VERIFY=0

# recipients
RECIPIENTS_FILE=./config/recipients.txt
RECIPIENTS_DIR=./config

# mail template
MAIL_SUBJECT=Transcript ready: {name}

# webhook configuration
# WEBHOOK_URL=https://example.com/hook
# WEBHOOK_BEARER=yourtoken
# WEBHOOK_TIMEOUT=15
# WEBHOOK_VERIFY=1
